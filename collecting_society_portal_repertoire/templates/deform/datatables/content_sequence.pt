<tal:block metal:extend-macro="sequence"
           i18n:domain="collecting_society_portal_repertoire">

    <script metal:fill-slot="settings">
        var datatableSequenceSettings = {
            apiPath: "content",
            apiArgs: function(args) {
                args.category = "${field.schema.category}";
            },
            unique: "code",
            columns: [
                {
                    name: "name",
                    title: "${_('Name')}",
                    data: "name",
                    className: "all",
                    orderable: true,
                    searchable: true,
                    render: $.fn.dataTable.render.text(),
                    datatableSequence: {
                        position: "displayed",
                        widgetType: 'TextInputWidget',
                        footerSearch: true,
                        createShow: true,
                    }
                },
                {
                    name: "code",
                    title: "${_('Code')}",
                    data: "code",
                    orderable: true,
                    searchable: true,
                    render: $.fn.dataTable.render.text(),
                    datatableSequence: {
                        position: "displayed",
                        widgetType: 'HiddenWidget',
                        footerSearch: true,
                    }
                },
            ],
        };
    </script>

</tal:block>
