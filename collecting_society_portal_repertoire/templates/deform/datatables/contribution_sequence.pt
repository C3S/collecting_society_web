                    }
                },
                {
                    name: "neighbouring_rights_society",
                    title: "${_('Neighbouring Rights Society')}",
                    data: "neighbouring_rights_society",
                    className: "none",
                    orderable: false,
                    searchable: false,
                    render: $.fn.dataTable.render.text(),
                    defaultContent: "",
                    datatableSequence: {
                        position: "collapsed",
                        widgetType: 'Select2Widget',
                    }
                },
            ],
        };
    </script>

</tal:block>
