<tal:block metal:extend-macro="sequence"
           i18n:domain="collecting_society_portal_repertoire">

    <script metal:fill-slot="settings">
        var datatableSequenceSettings = {
            columns: [
                {
                    name: "artist",
                    title: "${_('Artist')}",
                    data: "artist",
                    className: "always",
                    orderable: false,
                    searchable: false,
                    render: function(data, type, row, meta) {
                        if(type !== 'display' && type !== 'sort')
                            return data;
                        var name = "";
                        if(data.datatableSequence === true)
                            data = data.target.table.rows().data();
                            name = tmpl.encode(data[0].name);
                        return name;
                    },
                    defaultContent: "",
                    datatableSequence: {
                        position: "displayed",
                        widgetType: 'DatatableSequenceWidget',
                    }
                },
                {
                    name: "contribution_type",
                    title: "${_('Contribution Type')}",
                    data: "contribution_type",
                    className: "always",
                    orderable: true,
                    searchable: true,
                    render: $.fn.dataTable.render.text(),
                    datatableSequence: {
                        position: "displayed",
                        widgetType: 'Select2Widget',
                    }
                },
                {
                    name: "performance",
                    title: "${_('Performance Type')}",
                    data: "performance",
                    className: "none",
                    orderable: true,
                    searchable: true,
                    render: $.fn.dataTable.render.text(),
                    defaultContent: "",
                    datatableSequence: {
                        position: "displayed",
                        widgetType: 'Select2Widget',
                    }
                },
                {
                    name: "role",
                    title: "${_('Role')}",
                    data: "role",
                    className: "none",
                    orderable: true,
                    searchable: true,
                    render: $.fn.dataTable.render.text(),
                    defaultContent: "",
